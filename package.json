{
    "name": "uijs.io",
    "version": "1.0.0",
    "description": "uijs.io website source",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cortex-js/uijs.io.git"
    },
    "keywords": [
        "web components"
    ],
    "main": "root/index.html",
    "scripts": {
        "build": "bash scripts/build.sh",
        "build:all": "npx lerna run build",
        "build:watch": "bash scripts/build.sh watch",
        "clean": "bash scripts/clean.sh",
        "deploy": "bash scripts/deploy.sh",
        "restart": "bash scripts/restart.sh",
        "stage": "bash scripts/stage.sh",
        "start": "bash scripts/server.sh"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=6.14.19"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ],
    "author": "Arno Gourdol <arno@arno.org>",
    "contributors": [],
    "bugs": "https://github.com/cortex-js/cortexjs.io/issues/",
    "devDependencies": {
        "@11ty/eleventy": "^0.11.1",
        "@cortex-js/prettier-config": "^1.0.0",
        "@ui-js/code-playground": "^1.6.0",
        "cssnano": "^4.1.10",
        "gray-matter": "^4.0.2",
        "highlight.js": "^10.4.1",
        "husky": "^4.3.6",
        "lerna": "^3.22.1",
        "lint-staged": "^10.5.3",
        "markdown-it": "^12.0.3",
        "markdown-it-attrs": "^3.0.3",
        "markdown-it-deflist": "^2.1.0",
        "node-sass": "^5.0.0",
        "postcss": "^8.2.1",
        "postcss-cli": "^8.3.1",
        "typescript": "^4.1.3"
    },
    "prettier": "@cortex-js/prettier-config",
    "husky": {
        "hooks": {
            "pre-commit": ""
        }
    },
    "lint-staged": {
        "*.{js,css,json,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
